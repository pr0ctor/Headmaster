@model Headmaster.Models.AvailableCourses
@{
    ViewBag.Title = "SearchAndRegister";
    IEnumerable<Headmaster.Models.AvailableCourses> course = ViewData["Course"] as IEnumerable<Headmaster.Models.AvailableCourses>;
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<h2>Search and Register</h2>

@using (Html.BeginForm("SearchAndRegister"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           <div class="form-group">
            @Html.LabelFor(model => model.SemesterYear.SemesterID, "Semester", htmlAttributes: new { @class = "control-label col-md-2" })
       
               <div class="col-md-10">
                @Html.DropDownList("SemesterYearID", null, "Select", htmlAttributes: new { @class = "form-control", @id = "SemesterDropDown" })
                @Html.ValidationMessageFor(model => model.SemesterYear.SemesterID, "", new { @class = "text-danger" })

            </div>
             </div>
            @Html.LabelFor(model => model.Courses.DepartmentID, "Department", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" >
                @Html.DropDownList("DepartmentID", null, "Select", htmlAttributes: new { @class = "form-control", @id = "DepartmentDropDown", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.SemesterYear.SemesterID, "", new { @class = "text-danger" })
            </div>

               <div class="form-group" >
                   @Html.LabelFor(model => model.Courses.CourseNumber, "Course", htmlAttributes: new { @class = "control-label col-md-2" })
                   <div class="col-md-10">
                  
               @Html.DropDownList("CourseNumber", null, "Select", htmlAttributes: new { @class = "form-control", @disabled = "disabled", @id = "CourseDropDown"})
               @Html.ValidationMessageFor(model => model.Courses.CourseNumber, "", new { @class = "text-danger" })
                    
                   </div>
                   </div>
                <a onclick="this.form.submit();" class="btn btn-primary" id="SearchButton" >Search</a>
}

   
<table class="table">
    <tr>
        <th>
           Department
        </th>
        <th>
            Course Number
        </th>
        <th>
            Title
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CRN)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Days.Day)
        </th>
        <th>
            Time
        </th>
        <th>
           Professor
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Courses.Credits)
        </th>

    </tr>
    @foreach (var item in (IEnumerable<Headmaster.Models.AvailableCourses>) course)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Departments.Abbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.CourseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CRN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Departments.Abbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Times.Times1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Professors.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Credits)
            </td>
        
        </tr>
    }
 

</table>

<script>    $(document).ready(function () {
        //Unlock Course
    $('#DepartmentDropDown').change(function () {

        var selecteditem = $('#DepartmentDropDown').find(":selected").text();

        if (selecteditem == "Select") {
            $('#CourseDropDown').prop('disabled', true);
         
        }
        else {
            $('#CourseDropDown').prop('disabled', false);
   
        }
        });
        //Unlock department
    $('#SemesterDropDown').change(function () {

        var selecteditem = $('#SemesterDropDown').find(":selected").text;

        if (selecteditem == "Select") {
            $('#DepartmentDropDown').prop('disabled', true);
            
        }
        else {
            $('#DepartmentDropDown').prop('disabled', false);


        }
    });
       
   
    });</script> 