@model Headmaster.Models.Courses

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Courses</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Credits)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Credits)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Departments.Abbreviation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departments.Abbreviation)
        </dd>

    </dl>

    <h4>Prerequisites</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                Course Number
            </th>
            <th>
                Course Name
            </th>
            <th>
                Description
            </th>
            <th>
                Credits
            </th>
            <th>
                Department
            </th>
            <th></th>
        </tr>
    @foreach (var item in Model.Prerequisites)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Courses1.CourseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses1.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses1.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses1.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses1.Departments.Abbreviation)
            </td>
        </tr>
    }
     </table>
</div>
