@model Headmaster.Models.MajorRequirements

@{
    ViewBag.Title = "RecommendCourse";
    IEnumerable<Headmaster.Models.MajorRequirements> Recommend = ViewBag.Recommendation as IEnumerable<Headmaster.Models.MajorRequirements>;
}

<h2>Course Recommendation</h2>
<p>
    Based on your previous courses we recommend the following classes:
</p>
<table class="table">
    <tr>
        <th>
            Department
        </th>
        <th>
            Course Number
        </th>
        <th>
            Title
        </th>
        <th>
            Credits
        </th>
    </tr>

    @foreach (var item in Recommend)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Departments.Abbreviation)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Courses.CourseNumber)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Courses.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.Credits)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Course", new { id = item.CourseID }, null)

            </td>

        </tr>
    }
</table>
@Html.ActionLink("Required Courses", "RequiredCourses")